%p#notice= notice

%h1 User Info
%p
  %b Name:
  = @list.name
%p
  %b User:
  = @user.username
%p
  %b Permissions:
  = @list.permissions

%h1 Items
%table.table#item-table
  %thead
    %tr
      %th Description
      %th Mark Complete
  %tbody
    - @items.each do |item|
      = render partial: 'items/item', locals: {item: item}
%br
.new-item
  = render partial: 'items/form', locals: {list: @list}
%br
%br
= link_to 'Edit', edit_user_list_path(@user, @list), class: 'btn'
\|
= link_to 'Back', @user, class: 'btn'
